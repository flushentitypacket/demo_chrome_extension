{
  "manifest_version": 2,

  "name": "Demo",
  "description": "Demonstrates communication between Chrome extension layers",
  "version": "0.0",
  "background": {
    "scripts": ["src/eventPage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "static/icon.png",
    "default_title": "inject overlay"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "src/payload.js"
  ]
}
